  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.1",
    "@kit/shared": "workspace:*",
    "@kit/supabase": "workspace:*",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@kit/eslint-config": "workspace:*",
    "@kit/prettier-config": "workspace:*",
    "@kit/tsconfig": "workspace:*",
    "@supabase/supabase-js": "catalog:",
    "@types/node": "^22.10.0",
    "typescript": "^5.9.3"
  },
  "typesVersions": {
    "*": {
